doctype html
html(lang='en')
	head
		meta(http-equiv="content-type", content="text/html; charset=UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="author", content= author)
		title= title
		link(rel='shortcut icon' href="/images/favicon.ico")
		link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap-theme.css')
		link(rel='stylesheet', type='text/css', href='/stylesheets/font-awesome.min.css')
		link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap-table.css')
		link(rel='stylesheet', type='text/css', href='/stylesheets/sweet-alert.css')
		link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
		script(src='/javascripts/ga.js')
	body
		block navigation
			nav.navbar.navbar-default(role='navigation')
				.container-fluid
					.navbar-header
						button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target=".navbar-collapse")
							span.sr-only
								|Steam Shuffle
							i.fa.fa-bars
						a.navbar-brand(href='/')
							i.fa.fa-random
							|&nbsp Steam Shuffle
					.collapse.navbar-collapse
						ul.nav.navbar-nav
							li
								a(href='/about')
									|About
							if(user_loc)
								li(class= isPublic ? "" : "disabled")
									a(href='/shuffle')
										|Shuffle
								li(class= isPublic ? "" : "disabled")
									a(href='/games')
										|Games
						ul.nav.navbar-nav.navbar-right
							li.dropdown
								if (!user_loc)
									a(href='/auth/steam')
										img(src='/images/sits_small.png')
								else
									a(href="#", class="dropdown-toggle" data-toggle="dropdown", role="button", aria-expanded="false")
										img(src=user_loc.photos[0].value, alt="avatar", class="icon") 
										|&nbsp !{user_loc.displayName}
										span.caret
									ul.dropdown-menu(role="menu")
										li
											a(href="/account")
												i.fa.fa-user
												|&nbsp Account
										li(class= isPublic ? "" : "disabled")
											a(href="/games")
												i.fa.fa-list
												|&nbsp Games
										li(class= isPublic ? "" : "disabled")
											a(href="/shuffle")
												i.fa.fa-random
												|&nbsp Shuffle
										li
											a(href="/logout")
												i.fa.fa-sign-out
												|&nbsp Logout
		block content
		script(src='/javascripts/jquery-1.11.1.min.js')
		script(src='/javascripts/bootstrap.min.js')
		script(src='/javascripts/bootstrap-table.js')
		script(src='/javascripts/sweet-alert.js')
		block script