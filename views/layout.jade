doctype html
html(lang='en')
	head
		meta(http-equiv="content-type", content="text/html; charset=UTF-8")
		meta(name="author", content="Anna Czerwiec")
		link(rel='shortcut icon' href="/images/favicon.ico")
		link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap-theme.min.css')
		link(rel='stylesheet', type='text/css', href='/stylesheets/font-awesome.min.css')
		link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')

	body
		block navigation
			nav.navbar.navbar-default(role='navigation')
				.container-fluid
					.navbar-header
						button(type='button', class='navbar-toggle collapsed', data-toggle='collapse')
							span.sr-only
								|Steam Shuffle
							i.fa.fa-bars
						a.navbar-brand(href='/')
							span.glyphicon.glyphicon-random
							|&nbsp Steam Shuffle
					.collapse.navbar-collapse
						ul.nav.navbar-nav
							li
								a(href='/about')
									|About
							if(user)
								li
									a(href='/shuffle')
										|Shuffle
								li
									a(href='/games')
										|Games
						ul.nav.navbar-nav.navbar-right
							li.dropdown
								if (!user)
									a(href='/auth/steam')
										img(src='/images/sits_small.png')
								else
									a(href="#", class="dropdown-toggle" data-toggle="dropdown", role="button", aria-expanded="false")
										img(src=user.photos[0].value, alt="avatar", class="icon") 
										|&nbsp !{user.displayName}
										span.caret
									ul.dropdown-menu(role="menu")
										li
											a(href="/account")
												i.fa.fa-user
												|&nbsp Account
										li
											a(href="/games")
												i.fa.fa-list
												|&nbsp Games
										li
											a(href="/shuffle")
												i.fa.fa-random
												|&nbsp Shuffle
										li
											a(href="/logout")
												i.fa.fa-sign-out
												|&nbsp Logout
		block content
		script(src='/javascripts/jquery-1.11.1.min.js')
		script(src='/javascripts/bootstrap.min.js')
		script(src="javascripts/shuffle.js")