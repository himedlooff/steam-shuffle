extends layout

block content
	.container
		//-.jumbotron
		if (user)
			- var lib = typeof(result) != 'undefined' ? JSON.parse(result) : { }
			- var random = typeof(rnd) != ('undefined' || null) ? rnd : -1
			br
			if (result)
				if (random==-1)
					form(action="/shuffle", method="post")
